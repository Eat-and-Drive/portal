= content_tag_for :tr, opening_hour do
  - if opening_hour.type == 'StandardOpeningHour'
    %td= StandardOpeningHour::DAYS[opening_hour.day]
  - else
    %td
      = l opening_hour.date, :format => :long
      = link_to iconize('', 'trash'), opening_hour, :remote => true, :method => :delete, :confirm => 'Are you sure you want to delete this special opening hour?', :class => 'btn btn-mini'
  %td
    = opening_hour.closed? ? 'Closed' : "#{l opening_hour.from, :format => '%H:%M'} &mdash; #{l opening_hour.to,   :format => '%H:%M'}".html_safe
    = link_to iconize('', 'pencil'), edit_opening_hour_path(opening_hour), :remote => true, :class => 'btn btn-mini'
