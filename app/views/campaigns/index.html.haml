.page-header
  %h1
    Campaigns
    .pull-right
      = link_to 'New campaign', new_campaign_path, :class => 'btn'
%table.table.table-striped
  %thead
    %tr
      %th= sort_link @search, :id, '#'
      %th= sort_link @search, :organization_name
      %th= sort_link @search, :name
      %th
  %tbody
    = content_tag_for(:tr, @campaigns) do |campaign|
      %td= campaign.id
      %td= link_to campaign.organization.name, campaign.organization
      %td= campaign.name
      %td
        = link_to edit_campaign_path(campaign), :class => 'btn btn-small' do
          %i.icon-pencil
          Edit
        = link_to campaign_path(campaign), :confirmation => 'Are you sure you cant to delete this campagin?', :remote => true, :method => :delete, :class => 'btn btn-danger btn-small' do
          %i.icon-trash.icon-white
          Delete
