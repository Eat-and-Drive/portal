.page-header
  %h1
    Organizations
    .pull-right
      = link_to 'New organization', new_organization_path, :class => 'btn'
%table.table.table-striped
  %thead
    %tr
      %th= sort_link @search, :id, '#'
      %th= sort_link @search, :name
      %th
      %th
  %tbody
    - @organizations.each do |organization|
      %tr
        %td= organization.id
        %td= organization.name
        %td
          = link_to edit_organization_path(organization), :class => 'btn btn-small' do
            %i.icon-pencil
            Edit
        %td
          = link_to organization_path(organization), :confirmation => 'Are you sure you cant to delete this organization?', :remote => true, :method => :delete, :class => 'btn btn-danger btn-small' do
            %i.icon-trash.icon-white
            Delete
