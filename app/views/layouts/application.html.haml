!!!
%html{'lang' => 'en'}
  %head
    = stylesheet_link_tag :application, media: 'all'
    = javascript_include_tag :application
    = csrf_meta_tags
    %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1.0'}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{'type' => 'button', 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Eat&Drive Portal', root_path, :class => 'brand'
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li.navbar-text Logged in as
              %li.dropdown
                %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                  = @current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'My account', profile_path
                  %li.divider
                  %li= link_to 'Log out', logout_path, :confirm => 'Are you sure you want to log out?', :method => :delete
            %ul.nav
              %li= link_to 'Dashboard', root_path
              %li.dropdown
                %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                  Administration
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Organizations', root_path
                  %li= link_to 'Users', users_path
    .container
      .row
        .span12
          = yield
      %hr
      %footer
        %p &copy; Eat&amp;Drive 2013
